<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <context id="MySql">
        <!-- JavaBean 实现 序列化 接口 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <!-- genenat entity时,生成toString -->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <!-- 自定义查询指定字段  -->
        <plugin type="com.example.mybatis.generator.FieldsPlugin"/>
        <!-- 自定义OverwriteXml插件解决重复追加内容的问题  -->
        <plugin type="com.example.mybatis.generator.OverwriteXmlPlugin"/>
        <!-- generate entity时，生成hashcode和equals方法-->
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin"/>
        <!-- example 支持limit分页  -->
        <plugin type="com.example.mybatis.generator.PaginationPlugin"/>
        <!-- generate entity时，生成update,insert 场景下自动填充create_time,update_time为系统当前时间-->
        <plugin type="com.example.mybatis.generator.CreateUpdateTimePlugin">
            <property name="createTimeColumns" value="create_time"/>
            <property name="updateTimeColumns" value="update_time"/>
            <property name="dbCurrentTimeExpr" value="current_timestamp"/>
        </plugin>
        <!-- generate entity时，重命名实体类名称-->
        <plugin type="com.example.mybatis.generator.RenameModelPlugin">
            <property name="prefixes2Remove" value="tb, pp"/>
            <property name="suffix2Append" value="PO"/>
        </plugin>
        <!-- generate entity时，生成swagger类与属性备注注解-->
        <plugin type="com.example.mybatis.generator.Swagger2DocPlugin">
            <property name="apiModelAnnotationPackage" value="io.swagger.annotations.ApiModel"/>
            <property name="apiModelPropertyAnnotationPackage" value="io.swagger.annotations.ApiModelProperty"/>
        </plugin>
        <!-- generate entity时，生成与数据库对应的注释-->
        <commentGenerator type="com.example.mybatis.generator.DBCommentGenerator">
            <property name="suppressAllComments" value="false"/>
            <property name="suppressDate" value="true"/>
        </commentGenerator>

        <!-- jdbc连接 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://192.168.0.204:3306/auth?serverTimezone=Hongkong&amp;useUnicode=true&amp;characterEncoding=utf8&amp;allowPublicKeyRetrieval=true&amp;useSSL=true&amp;nullCatalogMeansCurrent=true"
                        userId="root" password="CyUr3qEk&lt;*Do">
            <property name="remarksReporting" value="true"/>
        </jdbcConnection>

        <!--生成的model(PO与example)文件存放的位置-->
        <javaModelGenerator targetPackage="com.example.db.entity" targetProject="web\src\main\java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!--生成映射文件存放位置-->
        <sqlMapGenerator targetPackage="mapping.autogenerated" targetProject="web\src\main\resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!--生成Dao(Mapper)类存放位置-->
        <javaClientGenerator targetPackage="com.example.db.mapper" targetProject="web\src\main\java"
                             type="XMLMAPPER">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table tableName="user" domainObjectName="User">
            <property name="useActualColumnNames" value="false"/>
        </table>


    </context>

</generatorConfiguration>